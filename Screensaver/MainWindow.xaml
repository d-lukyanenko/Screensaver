<Window x:Class="Screensaver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Screensaver"
        mc:Ignorable="d"
        Topmost="True"
        WindowStyle="None"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" Background="#FF0F1B3E">
    <Border Name="WindowBorder">
        <TextBlock x:Name="Message" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Screensaver" VerticalAlignment="Center" FontSize="36" Foreground="#FF24A52C"/>

    </Border>
</Window>
